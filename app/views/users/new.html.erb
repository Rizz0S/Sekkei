<% if flash[:errors] %>
  <% flash[:errors].each do |error| %>
    <p style="weight: bold;">
      <%= error %>
    </p>
  <% end %>
<% end %>

<h1>Sign Up!</h1>

<%= form_for @user do |f| %>
  <h4><%= f.label :name %></h4>
  <%= f.text_field :name %>

  <h4><%= f.label :username %></h4>
  <%= f.text_field :username %>

  <h4><%= f.label :bio %></h4>
  <%= f.text_area :bio %>

  <h4><%= f.label :password %></h4>
  <%= f.password_field :password %>

  <%= f.submit %>
<% end %>
<h3> <%=@user.name%> </h3>
<h4> <i>username ::</i> <%=@user.username%> </h4>
<h4>Bio: </h4> <p><%=@user.bio%></p>

<h4>Posts:</h4>
<ul>
<%if @posts.length > 0%>
    <%@posts.each do |post|%>
        <li><h4><%= link_to(post.title, post_path(post.id))%></h4></li>
    <%end%>
<%else%>
    <p>--This user has yet to write any posts.</p>
<%end%>
</ul>


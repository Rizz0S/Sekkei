<% if flash[:errors] %>
    <% flash[:errors].each do |message| %>
        <p style="color: red;"> <%= message %> </p>
    <% end%>

<% end%>

<%= form_for @user do |f| %>
    <%= f.label :name%>
    <%= f.text_field :name%>

    <%= f.label :username%> 
    <%= f.text_field :username%>

    <%= f.label :password%> 
    <%= f.text_field :password%>

    <%= f.label :bio%> 
    <%= f.text_field :bio%>

    <%= f.submit %>
<% end %>
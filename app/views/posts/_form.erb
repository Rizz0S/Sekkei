<% if flash[:errors] %>
<% flash[:errors].each do |message| %>
<p style="color: red;"> <%= message %> </p>
<% end%>
<% end%>
<%= form_for @post do |f| %>
<%= f.label :title%>
<%= f.text_field :title %>
<br>
<br>
<%= f.label :content%> <%= f.text_field :content%>
<br>
<br>
<%= f.label :user_id %>
<%= f.collection_select :user_id, @users, :id, :name %>
<%= f.label :post_id %>
<%= f.collection_select :post_id, @origamis, :id, :title %>
<%= f.submit %>
<% end %>




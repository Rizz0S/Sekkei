<% if flash[:errors] %>
  <% flash[:errors].each do |error| %>
    <p style="font-weight: bold">
      <%= error %>
    </p>
  <% end %>
<% end %>

<%= form_for @post do |f| %>
    <p><%= f.label :title%></p>
    <%= f.text_field :title %>

    <p><%= f.label :content%> </p>
     <%= f.text_area :content %>


    <p><%= f.label :user_id %></p>
    <%= f.collection_select :user_id, @users, :id, :name %>

    <p><%= f.label :origami_id %></p>
    <%= f.collection_select :origami_id, @origamis, :id, :title %>

    <%= f.submit %>
<% end %>



